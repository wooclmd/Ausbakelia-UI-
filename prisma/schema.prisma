generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category{
  id String @id @default(cuid()) 
  createdAt DateTime @default(now()) 
  title String
  img String 
  slug String @unique
  product Product[]
} 

model Product{
  id String @id @default(cuid()) 
  createdAt DateTime @default(now()) 
  title String 
  desc String 
  img String?
  price Int 
  isFeatured Boolean @default(false) 
  option1 Json[]
  option2 Json[]
  category Category @relation(fields: [catSlug], references: [slug])
  catSlug String
} 

model Order{
  id String @id @default(cuid()) 
  createdAt DateTime @default(now()) 
  price Int 
  products Json[] 
  status String 
  //for Stripe 
  intent_id String? @unique
}
